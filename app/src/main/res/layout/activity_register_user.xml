<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UsingOnClickInXml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_opaque"
    tools:context=".RegisterUser">

    <TextView
        android:id="@+id/title_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/title_reg"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/prod_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_reg"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_name"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_cpf"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_cpf"
                android:inputType="number"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_fone"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_fone"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_end"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_end"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_bairro"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_bairro"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_cep"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_cep"
                android:inputType="textPostalAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_city"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_city"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp"
                />

            <Spinner
                android:id="@+id/spnUf"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/spn_uf"
                />
                    <!--android:background="@drawable/blue_outline"
                    android:popupBackground="@drawable/blue_outline_white_background"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/item_country" -->

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_pw"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autofillHints="true"
                android:background="@drawable/custom_input"
                android:hint="@string/txt_pw"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20sp"
                />



            <Button
                android:id="@+id/btn_save"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/btn_save"
                android:background="@drawable/btn_round_corner"
                android:onClick="doRegister"
                android:textAllCaps="false"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_bold"
                />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>